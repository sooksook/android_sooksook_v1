<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="dataItem"
                type="kr.gdg.sooksook.data.item.DataItem"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp12_w360"
            android:paddingBottom="@dimen/dp12_w360">

        <androidx.cardview.widget.CardView
                android:id="@+id/item_data_cv"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp200_w360"
                android:layout_marginStart="@dimen/dp32_w360"
                android:layout_marginEnd="@dimen/dp32_w360"
                app:cardCornerRadius="@dimen/dp16_w360"
                app:cardElevation="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

            <ImageView
                    android:id="@+id/item_data_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    app:loadImage="@{dataItem.imageUrl}"
                    tools:src="@drawable/img_splash_bg"/>

            <TextView
                    android:id="@+id/item_data_tv"
                    style="@style/custom_text_view_bold"
                    android:layout_marginTop="@dimen/dp8_w360"
                    android:layout_marginEnd="@dimen/dp16_w360"
                    android:layout_marginBottom="@dimen/dp16_w360"
                    android:paddingTop="@dimen/dp8_w360"
                    android:paddingStart="@dimen/dp12_w360"
                    android:paddingEnd="@dimen/dp12_w360"
                    android:paddingBottom="@dimen/dp8_w360"
                    android:letterSpacing="-0.03"
                    android:background="@drawable/custom_text"
                    android:text="@{dataItem.name}"
                    android:textSize="@dimen/textSize14"
                    android:textColor="@color/color_4A4A4A"
                    android:layout_gravity="bottom|end"
                    tools:text="@string/app_name"/>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>