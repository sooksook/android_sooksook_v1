<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!--<variable-->
                <!--name="model"-->
                <!--type="kr.gdg.plant.view.viewmodel.MainViewModel"/>-->
    </data>

    <androidx.cardview.widget.CardView
            android:id="@+id/plant_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/main_tv_sooksook"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/plant_tv_title"
                    style="@style/custom_text_view_bold"
                    android:layout_marginTop="26dp"
                    android:layout_marginStart="32dp"
                    android:text="@string/plant_title"
                    android:textSize="18sp"
                    android:textColor="@color/color_02b372"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/plant_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>