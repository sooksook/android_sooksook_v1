<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
            android:id="@+id/plant_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/main_tv_sooksook"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/plant_tv_title"
                    style="@style/custom_text_view_bold"
                    android:layout_marginTop="@dimen/dp26_w360"
                    android:layout_marginStart="@dimen/dp32_w360"
                    android:text="@string/plant_title"
                    android:textSize="@dimen/textSize18"
                    android:textColor="@color/color_4A4A4A"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/plant_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp12_w360"
                    android:layout_marginBottom="@dimen/dp12_w360"
                    android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>