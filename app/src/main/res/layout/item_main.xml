<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="mainItem"
                type="kr.gdg.plant.data.item.MainItem"/>

    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

            <ImageView
                    android:id="@+id/item_main_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    app:loadImage="@{mainItem.imageUrl}"
                    tools:src="@drawable/img_splash_bg"/>

        </androidx.cardview.widget.CardView>

        <TextView
                android:id="@+id/item_main_tv"
                style="@style/custom_text_view_medium"
                android:layout_marginTop="8dp"
                android:letterSpacing="-0.03"
                android:text="@{mainItem.name}"
                android:textSize="14sp"
                android:textColor="@color/color_4A4A4A"/>

    </LinearLayout>
</layout>