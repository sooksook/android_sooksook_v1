<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="activity"
                type="kr.gdg.sooksook.view.activity.SearchActivity"/>
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <!--<com.google.android.material.appbar.AppBarLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@android:color/transparent"-->
        <!--android:fitsSystemWindows="true"-->
        <!--android:theme="@style/AppTheme.AppBarOverlay">-->

        <!--</com.google.android.material.appbar.AppBarLayout>-->

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <include
                    android:id="@+id/include_search_top"
                    layout="@layout/include_search_top"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

            <androidx.core.widget.NestedScrollView
                    android:id="@+id/search_nsv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:scrollbars="none"
                    android:descendantFocusability="blocksDescendants"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:descendantFocusability="blocksDescendants"
                        android:orientation="vertical">

                    <!--region 데이터 검색 전-->
                    <include
                            android:id="@+id/include_kind_of_plant"
                            layout="@layout/include_kind_of_plant"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@id/search_iv_box"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                    <!--endregion-->

                    <!--region 데이터를 검색할 때-->
                    <TextView
                            android:id="@+id/search_tv_recently_text"
                            style="@style/custom_text_view_medium"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="40dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:text="@string/recently_search_text"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            app:layout_constraintTop_toBottomOf="@id/search_iv_box"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/search_rv_result_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:visibility="gone"
                            tools:visibility="visible"
                            app:layout_constraintTop_toBottomOf="@id/search_tv_recently_text"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                    <!--endregion-->

                    <!--region 검색 결과가 없을 때-->
                    <androidx.cardview.widget.CardView
                            android:id="@+id/search_cv_result_data_no"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="16dp"
                            android:visibility="gone"
                            tools:visibility="visible"
                            app:layout_constraintTop_toBottomOf="@id/search_iv_box"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintCircleRadius="16dp"
                            app:cardElevation="2dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            <TextView
                                    android:id="@+id/search_tv_title"
                                    style="@style/custom_text_view_regular"
                                    android:layout_marginBottom="55dp"
                                    android:letterSpacing="-0.03"
                                    android:gravity="center_horizontal"
                                    tools:text="“마오리소포라” 가 없다면
문의하기를 눌러주세요"
                                    android:textSize="16sp"
                                    android:textColor="@color/color_4A4A4A"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintBottom_toTopOf="@id/search_iv_no_data"/>

                            <ImageView
                                    android:id="@+id/search_iv_no_data"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/img_ss_search"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>

                            <Button
                                    android:id="@+id/search_bt_contact"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="55dp"
                                    android:paddingStart="33dp"
                                    android:paddingEnd="33dp"
                                    android:background="@drawable/custom_button"
                                    android:fontFamily="@font/noto_bold"
                                    android:text="@string/contact"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/white"
                                    app:layout_constraintTop_toBottomOf="@id/search_iv_no_data"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>
                    <!--endregion-->

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>