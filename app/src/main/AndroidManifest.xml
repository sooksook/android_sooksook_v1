<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="kr.gdg.sooksook">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
            android:name="kr.gdg.sooksook.GlobalApplication"
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher_app"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">

        <activity android:name="kr.gdg.sooksook.view.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
                android:name=".view.activity.LoginActivity"
                android:screenOrientation="portrait" />

        <activity
                android:name="kr.gdg.sooksook.view.activity.MainActivity"
                android:screenOrientation="portrait" />

        <activity
                android:name=".view.activity.UserInfoActivity"
                android:screenOrientation="portrait" />

        <activity
                android:name="kr.gdg.sooksook.view.activity.SearchActivity"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustNothing" />

        <activity
                android:name="kr.gdg.sooksook.view.activity.WebViewActivity"
                android:screenOrientation="portrait" />
    </application>

</manifest>